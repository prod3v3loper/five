{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <main class="fs">

        <form method="post" action="" class="fs__elem">

            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="fs__input-text">
{#                <label for="inputUsername">Username</label>#}
                <input type="text" value="{{ last_username }}" name="username" placeholder="Username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            </div>

            <div class="fs__input-pass">
{#                <label for="inputPassword">Password</label>#}
                <input type="password" name="password" placeholder="Password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
    
            <div class="fs__checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            <p class="mt-5 mb-3 text-muted">prod3v3loper Â© 2021</p>
        </form>

    </main>

{% endblock %}
